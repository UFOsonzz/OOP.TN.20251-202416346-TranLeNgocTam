<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="GUI.controllers.MainMenuController"
            style="-fx-background-color: linear-gradient(to bottom, #e3f2fd, #bbdefb);">
    
    <!-- Top Section -->
    <top>
        <VBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="40.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            
            <Label text="ðŸ¦  VIRUS INFECTION SIMULATION ðŸ¦ " textFill="#1565c0">
                <font>
                    <Font name="Arial Bold" size="36.0"/>
                </font>
            </Label>
            
            <Label text="Explore How Different Viruses Infect Host Cells" textFill="#424242">
                <font>
                    <Font name="Arial" size="18.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <!-- Center Section -->
    <center>
        <VBox alignment="CENTER" spacing="30.0">
            <padding>
                <Insets top="40.0" right="40.0" bottom="40.0" left="40.0"/>
            </padding>
            
            <Label text="Select Virus Type:" textFill="#1976d2">
                <font>
                    <Font name="Arial Bold" size="24.0"/>
                </font>
            </Label>
            
            <Button fx:id="envelopedBtn" onAction="#handleEnvelopedViruses" 
                    prefWidth="450.0" prefHeight="120.0"
                    style="-fx-background-color: #4caf50; -fx-background-radius: 15; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);">
                <graphic>
                    <VBox alignment="CENTER" spacing="10.0">
                        <Label text="ðŸ”´ ENVELOPED VIRUSES" textFill="WHITE">
                            <font>
                                <Font name="Arial Bold" size="20.0"/>
                            </font>
                        </Label>
                        <Label text="Viruses with lipid envelope using lock-key mechanism&#10;(HIV, SARS-CoV-2)" 
                               textFill="WHITE" textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                </graphic>
            </Button>
            
            <Button fx:id="nonEnvelopedBtn" onAction="#handleNonEnvelopedViruses"
                    prefWidth="450.0" prefHeight="120.0"
                    style="-fx-background-color: #2196f3; -fx-background-radius: 15; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);">
                <graphic>
                    <VBox alignment="CENTER" spacing="10.0">
                        <Label text="ðŸ”µ NON-ENVELOPED VIRUSES" textFill="WHITE">
                            <font>
                                <Font name="Arial Bold" size="20.0"/>
                            </font>
                        </Label>
                        <Label text="Viruses without envelope using direct infection&#10;(Adenovirus, Poliovirus)" 
                               textFill="WHITE" textAlignment="CENTER" wrapText="true">
                            <font>
                                <Font name="Arial" size="14.0"/>
                            </font>
                        </Label>
                    </VBox>
                </graphic>
            </Button>
        </VBox>
    </center>
    
    <!-- Bottom Section -->
    <bottom>
        <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            
            <Button fx:id="helpBtn" text="ðŸ“– Help" onAction="#handleHelp"
                    prefWidth="150.0" prefHeight="50.0"
                    style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;">
                <font>
                    <Font name="Arial Bold" size="16.0"/>
                </font>
            </Button>
            
            <Button fx:id="quitBtn" text="âŒ Quit" onAction="#handleQuit"
                    prefWidth="150.0" prefHeight="50.0"
                    style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;">
                <font>
                    <Font name="Arial Bold" size="16.0"/>
                </font>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
