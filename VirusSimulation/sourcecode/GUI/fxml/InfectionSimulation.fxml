<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.controllers.InfectionSimulationController"
            style="-fx-background-image: url('resources/images/backgrounds/simulation_bg.png'); -fx-background-size: cover; -fx-background-position: center;">
    
    <top>
        <VBox alignment="CENTER" spacing="5">
            <padding>
                <Insets top="20" bottom="15"/>
            </padding>
            <Label fx:id="titleLabel" style="-fx-text-fill: #2196F3; -fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="infoLabel" wrapText="true" maxWidth="700" textAlignment="CENTER" alignment="CENTER" 
                   style="-fx-text-fill: #666666; -fx-font-size: 11px;"/>
            
            <!-- Receptor Selection -->
            <HBox alignment="CENTER" spacing="10" style="-fx-padding: 10 0 0 0;">
                <Label text="Select Host Cell Receptor:" style="-fx-text-fill: #333333; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                <ComboBox fx:id="receptorComboBox" onAction="#handleReceptorChange" 
                          prefWidth="150" style="-fx-font-size: 11px;"/>
                <Label fx:id="matchLabel" style="-fx-font-size: 11px; -fx-padding: 5px 10px; -fx-background-radius: 5px;"/>
            </HBox>
        </VBox>
    </top>
    
    <center>
        <HBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <VBox spacing="5">
                <Label text="Animation" style="-fx-text-fill: #333333; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                <Pane fx:id="animationPane" prefWidth="500" prefHeight="350"
                      style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Simulation Log" style="-fx-text-fill: #333333; -fx-font-size: 12px; -fx-font-weight: bold;"/>
                <TextArea fx:id="logArea" prefWidth="350" prefHeight="350" editable="false" wrapText="true"
                          style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-font-family: 'Courier New'; -fx-font-size: 11px; -fx-border-radius: 5; -fx-background-radius: 5;"/>
            </VBox>
        </HBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" bottom="15"/>
            </padding>
            <Button fx:id="startBtn" text="Start Infection" onAction="#handleStart" 
                    prefWidth="120" prefHeight="35"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;"/>
            <Button fx:id="resetBtn" text="Reset" onAction="#handleReset" 
                    prefWidth="80" prefHeight="35"
                    style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-font-size: 12px; -fx-background-radius: 5; -fx-cursor: hand;"/>
            <Button fx:id="backBtn" text="Back" onAction="#handleBack" 
                    prefWidth="80" prefHeight="35"
                    style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1; -fx-font-size: 12px; -fx-background-radius: 5; -fx-cursor: hand;"/>
        </HBox>
    </bottom>
    
</BorderPane>
