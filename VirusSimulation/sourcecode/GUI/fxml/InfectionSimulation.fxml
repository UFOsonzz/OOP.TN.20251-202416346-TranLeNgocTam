<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.controllers.InfectionSimulationController"
            style="-fx-background-color: linear-gradient(to bottom, #f3e5f5, #e1bee7);">
    
    <!-- Top Section -->
    <top>
        <VBox alignment="CENTER" spacing="10.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            
            <Label fx:id="titleLabel" textFill="#6a1b9a">
                <font>
                    <Font name="Arial Bold" size="28.0"/>
                </font>
            </Label>
            
            <Label fx:id="infoLabel" wrapText="true" maxWidth="800.0" textFill="#424242">
                <font>
                    <Font name="Arial" size="14.0"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <!-- Center Section -->
    <center>
        <HBox alignment="CENTER" spacing="20.0">
            <padding>
                <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
            </padding>
            
            <!-- Left - Animation Area -->
            <VBox alignment="TOP_CENTER" spacing="10.0">
                <Label text="Animation View">
                    <font>
                        <Font name="Arial Bold" size="18.0"/>
                    </font>
                </Label>
                
                <Pane fx:id="animationPane" prefWidth="500.0" prefHeight="350.0"
                      style="-fx-background-color: #ffffff; -fx-border-color: #9c27b0; -fx-border-width: 3; -fx-border-radius: 10; -fx-background-radius: 10;"/>
            </VBox>
            
            <!-- Right - Log Area -->
            <VBox alignment="TOP_CENTER" spacing="10.0">
                <Label text="Infection Log">
                    <font>
                        <Font name="Arial Bold" size="18.0"/>
                    </font>
                </Label>
                
                <TextArea fx:id="logArea" prefWidth="400.0" prefHeight="350.0" editable="false" wrapText="true"
                          style="-fx-control-inner-background: #fafafa; -fx-font-family: monospace; -fx-font-size: 12; -fx-border-color: #9c27b0; -fx-border-width: 2; -fx-border-radius: 10;"/>
            </VBox>
        </HBox>
    </center>
    
    <!-- Bottom Section -->
    <bottom>
        <HBox alignment="CENTER" spacing="15.0">
            <padding>
                <Insets top="15.0" right="15.0" bottom="15.0" left="15.0"/>
            </padding>
            
            <Button fx:id="startBtn" text="â–¶ Start Infection" onAction="#handleStart"
                    prefWidth="180.0" prefHeight="50.0"
                    style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;">
                <font>
                    <Font name="Arial Bold" size="16.0"/>
                </font>
            </Button>
            
            <Button fx:id="resetBtn" text="ðŸ”„ Reset" onAction="#handleReset"
                    prefWidth="150.0" prefHeight="50.0"
                    style="-fx-background-color: #ff9800; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;">
                <font>
                    <Font name="Arial Bold" size="16.0"/>
                </font>
            </Button>
            
            <Button fx:id="backBtn" text="â¬… Back" onAction="#handleBack"
                    prefWidth="150.0" prefHeight="50.0"
                    style="-fx-background-color: #607d8b; -fx-text-fill: white; -fx-background-radius: 10; -fx-cursor: hand;">
                <font>
                    <Font name="Arial Bold" size="16.0"/>
                </font>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
