<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="GUI.controllers.InfectionSimulationController"
            style="-fx-background-color: #f5f5f5;">
    
    <top>
        <VBox alignment="CENTER" spacing="5">
            <padding>
                <Insets top="20" bottom="15"/>
            </padding>
            <Label fx:id="titleLabel" style="-fx-text-fill: #2196F3;">
                <font>
                    <Font size="18"/>
                </font>
            </Label>
            <Label fx:id="infoLabel" wrapText="true" maxWidth="700" textAlignment="CENTER" alignment="CENTER" style="-fx-text-fill: #666666;">
                <font>
                    <Font size="11"/>
                </font>
            </Label>
        </VBox>
    </top>
    
    <center>
        <HBox alignment="CENTER" spacing="15">
            <padding>
                <Insets top="10" right="20" bottom="10" left="20"/>
            </padding>
            
            <VBox spacing="5">
                <Label text="Animation" style="-fx-text-fill: #333333;">
                    <font>
                        <Font size="12"/>
                    </font>
                </Label>
                <Pane fx:id="animationPane" prefWidth="500" prefHeight="350"
                      style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1;"/>
            </VBox>
            
            <VBox spacing="5">
                <Label text="Log" style="-fx-text-fill: #333333;">
                    <font>
                        <Font size="12"/>
                    </font>
                </Label>
                <TextArea fx:id="logArea" prefWidth="350" prefHeight="350" editable="false" wrapText="true"
                          style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1;"/>
            </VBox>
        </HBox>
    </center>
    
    <bottom>
        <HBox alignment="CENTER" spacing="10">
            <padding>
                <Insets top="10" bottom="15"/>
            </padding>
            <Button fx:id="startBtn" text="Start" onAction="#handleStart" 
                    prefWidth="80" prefHeight="30"
                    style="-fx-background-color: white; -fx-border-color: #2196F3; -fx-border-width: 1; -fx-text-fill: #2196F3;">
                <font>
                    <Font size="12"/>
                </font>
            </Button>
            <Button fx:id="resetBtn" text="Reset" onAction="#handleReset" 
                    prefWidth="80" prefHeight="30"
                    style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1;">
                <font>
                    <Font size="12"/>
                </font>
            </Button>
            <Button fx:id="backBtn" text="Back" onAction="#handleBack" 
                    prefWidth="80" prefHeight="30"
                    style="-fx-background-color: white; -fx-border-color: #cccccc; -fx-border-width: 1;">
                <font>
                    <Font size="12"/>
                </font>
            </Button>
        </HBox>
    </bottom>
    
</BorderPane>
